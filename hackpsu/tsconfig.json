{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src",           // ⬅️ New: treat /src as the project root
    "paths": {
      "@/*": ["*"]                // ⬅️ Updated: resolves to /src/*
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",                   // ⬅️ Only look inside /src
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "src/**/*.mts"                // ⬅️ Adjusted for modules inside /src
  ],
  "exclude": ["node_modules"]
}
